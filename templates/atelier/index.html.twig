{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/atelierIndex.css">
{% endblock %}

{% block body %}
    <h1>Workshop index</h1>
    <a href="{{ path('atelier_new') }}"><button class="btn">Add a workshop</button></a>
     <div class="container">
        <div class="titreIndex">
            <div class="action">Action</div>
            <div class="name">Name</div>
            <div class="category">Category</div>
            <div class="description">Description</div>
        </div>
        {% for atelier in ateliers %}
        <div class="infos">
            <div class="action">
                <a class="lienEdit" href="{{ path('atelier_edit', {'id': atelier.id}) }}"><i class="fas fa-edit"></i></a>
                {{ include('atelier/_delete_form.html.twig') }}
            </div>
            <div class="name">{{ atelier.nom }}</div>
            <div class="category">{{ atelier.categorie }}</div>
            <div class="description">{{ atelier.description }}</div>
        </div>
        {% else %}
            <p colspan="8">You have no workshop</p>
        {% endfor %}
    </div>
{% endblock %}
